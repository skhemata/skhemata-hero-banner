{
  "name": "@skhemata/skhemata-hero-banner",
  "version": "1.1.0",
  "description": "Skhemata Site Hero Banner Web Component. This web component provides website hero banner functionality.",
  "author": "skhemata-hero-banner",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "license": "https://raw.githubusercontent.com/skhemata/skhemata-hero-banner/master/LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/skhemata/skhemata-hero-banner.git"
  },
  "keywords": [
    "skhemata",
    "hero banner",
    "web component"
  ],
  "scripts": {
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "tsc",
    "prepare": "npm run build",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && build-storybook"
  },
  "dependencies": {
    "@skhemata/skhemata-base": "^1.1.0",
    "lit-element": "^2.5.1",
    "lit-html": "^2.0.0-rc.3"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-storybook": "^0.3.6-next.0",
    "@web/test-runner": "^0.12.20",
    "concurrently": "^5.3.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
